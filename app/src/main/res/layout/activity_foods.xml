<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bishe.nongcun.activity.FoodsActivity">

    <include layout="@layout/layout_title_bar_back" />

    <RadioGroup
        android:id="@+id/rg_cando_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_qiugou"
            style="@style/radiobuttonmy"
            android:text="求购" />

        <RadioButton
            android:id="@+id/rbtn_price"
            style="@style/radiobuttonmy"
            android:text="价格" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_foods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
